<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FeChat"
        x:Class="FeChat.ContactsWindow"
        Title="Fe Chat - Contacts"
        Width="400" Height="600"
        MinWidth="350" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Styles>
        <Style Selector="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#F0F0F0"/>
        </Style>

        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#E3F2FD"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#106EBE"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0"
                           Text="Chats"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#202020"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Name="NewChatButton"
                        Content="+ New"
                        FontSize="14"/>
            </Grid>
        </Border>

        <!-- Contacts List -->
        <ListBox Grid.Row="1" 
                 Name="ContactsListBox"
                 SelectionMode="Single"
                 Background="White">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="local:Contact">
                    <Border BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1"
                            Padding="20,15"
                            Background="Transparent">
                        <Grid ColumnDefinitions="50,*,Auto">
                            <!-- Avatar Circle -->
                            <Border Grid.Column="0"
                                    Width="50" Height="50"
                                    CornerRadius="25"
                                    Background="#0078D4"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Initial}"
                                           Foreground="White"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Contact Info -->
                            <StackPanel Grid.Column="1" 
                                        Margin="15,0,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding ContactId}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#202020"/>
                                <TextBlock Text="{Binding LastMessage}"
                                           FontSize="13"
                                           Foreground="#707070"
                                           TextTrimming="CharacterEllipsis"
                                           MaxWidth="200"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Time and Unread Badge -->
                            <StackPanel Grid.Column="2"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right">
                                <TextBlock Text="{Binding LastMessageTime}"
                                           FontSize="12"
                                           Foreground="#909090"
                                           HorizontalAlignment="Right"/>
                                <Border Background="#0078D4"
                                        CornerRadius="10"
                                        Padding="8,3"
                                        Margin="0,5,0,0"
                                        HorizontalAlignment="Right"
                                        IsVisible="{Binding HasUnread}">
                                    <TextBlock Text="{Binding UnreadCount}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20,12">
            <TextBlock Name="StatusTextBlock"
                       Text="Ready"
                       FontSize="12"
                       Foreground="#707070"/>
        </Border>

    </Grid>

</Window>

