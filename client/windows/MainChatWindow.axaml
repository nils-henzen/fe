<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FeChat"
        x:Class="FeChat.MainChatWindow"
        Title="Fe Chat"
        Width="900" Height="600"
        MinWidth="700" MinHeight="500"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual"
        CanResize="True"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent">

    <Window.Styles>
        <Style Selector="ListBox">
            <Setter Property="Background" Value="{DynamicResource WhiteBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
        </Style>

        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource WhiteBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
        </Style>
        
        <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PrimaryPressedBrush}"/>
        </Style>

        <Style Selector="Button:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <Style Selector="Button.icon">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="MinWidth" Value="40"/>
        </Style>

        <Style Selector="Button.icon:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
        </Style>
        
        <Style Selector="Button.icon:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="{DynamicResource WhiteBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
        
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
        
        <Style Selector="TextBox:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        </Style>
    </Window.Styles>

    <!-- Main Container with Shadow -->
    <Border Background="{DynamicResource WhiteBrush}"
            CornerRadius="8">
        
        <Grid ColumnDefinitions="320,*" RowDefinitions="Auto,*">

            <!-- Custom Title Bar spanning both columns -->
            <Border Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"
                    Background="{DynamicResource PrimaryBrush}"
                    CornerRadius="8,8,0,0"
                    Height="40"
                    Name="TitleBar">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="Fe Chat"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource WhiteBrush}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                    <Button Grid.Column="1"
                            Name="CloseButton"
                            Content="✕"
                            FontSize="16"
                            Foreground="{DynamicResource WhiteBrush}"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="40"
                            Height="40"
                            CornerRadius="0,8,0,0"
                            Padding="12, 10, 0, 0"
                            ToolTip.Tip="Close"
                            Cursor="Hand">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </Grid>
            </Border>

            <!-- Left Panel - Contacts List -->
            <Border Grid.Column="0"
                    Grid.Row="1"
                    Background="{DynamicResource WhiteBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,1,0"
                    CornerRadius="0,0,0,8">
                <Grid RowDefinitions="Auto,*">

                    <!-- Contacts Header -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource WhiteBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="15,12">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                       Text="Chats"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Name="NewChatButton"
                                    Content="+"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Width="36"
                                    Height="36"
                                    Padding="11,6,0,0"
                                    CornerRadius="18"
                                    ToolTip.Tip="New Chat"/>
                        </Grid>
                    </Border>

                    <!-- Contacts List -->
                    <ListBox Grid.Row="1"
                             Name="ContactsListBox"
                             SelectionMode="Single"
                             Background="{DynamicResource WhiteBrush}">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="local:Contact">
                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                        Padding="15,12"
                                        Background="Transparent">
                                    <Grid ColumnDefinitions="45,*">
                                        <!-- Avatar Circle -->
                                        <Border Grid.Column="0"
                                                Width="45" Height="45"
                                                CornerRadius="22.5"
                                                Background="{DynamicResource PrimaryBrush}"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Initial}"
                                                       Foreground="{DynamicResource WhiteBrush}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Contact Info -->
                                        <Grid Grid.Column="1"
                                              Margin="12,0,0,0"
                                              RowDefinitions="Auto,Auto">
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding ContactId}"
                                                       FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding LastMessage}"
                                                       FontSize="13"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,3,0,0"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </Border>

            <!-- Right Panel - Chat View -->
            <Grid Grid.Column="1" Grid.Row="1" RowDefinitions="Auto,*,Auto">

                <!-- Empty State or Chat Header -->
                <Border Grid.Row="0"
                        Name="ChatHeaderBorder"
                        Background="{DynamicResource WhiteBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="20,12"
                        IsVisible="False">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Avatar -->
                        <Border Grid.Column="0"
                                Width="40" Height="40"
                                CornerRadius="20"
                                Background="{DynamicResource PrimaryBrush}"
                                VerticalAlignment="Center">
                            <TextBlock Name="ChatContactInitialText"
                                       Foreground="{DynamicResource WhiteBrush}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Contact Name -->
                        <TextBlock Grid.Column="1"
                                   Name="ChatContactNameText"
                                   FontSize="17"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>

                        <!-- Refresh Button -->
                        <Button Grid.Column="2"
                                Name="RefreshButton"
                                Content="↻"
                                Classes="icon"
                                FontSize="18"
                                ToolTip.Tip="Refresh messages"/>
                    </Grid>
                </Border>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            Name="EmptyStatePanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="15">
                    <TextBlock Text="💬"
                               FontSize="64"
                               HorizontalAlignment="Center"
                               Opacity="0.3"/>
                    <TextBlock Text="Select a chat to start messaging"
                               FontSize="16"
                               Foreground="{DynamicResource TextDisabledBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Chat Messages Area -->
                <ScrollViewer Grid.Row="1"
                              Name="MessageScrollViewer"
                              Padding="20"
                              Background="{DynamicResource ChatBackgroundBrush}"
                              IsVisible="False">
                    <ItemsControl Name="MessagesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="local:ChatMessage">
                                <Border Margin="0,5"
                                        HorizontalAlignment="{Binding Alignment}">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Border Grid.Column="0"
                                                Background="{Binding BubbleColor}"
                                                CornerRadius="8"
                                                Padding="12,8"
                                                MaxWidth="400">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Text}"
                                                           TextWrapping="Wrap"
                                                           FontSize="14"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                <TextBlock Text="{Binding Time}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <Button Grid.Column="1"
                                                IsVisible="{Binding IsDownloadableFile}"
                                                ToolTip.Tip="Download file"
                                                Margin="8,0,0,0"
                                                MinWidth="36"
                                                Height="36"
                                                CornerRadius="18"
                                                Padding="8"
                                                Tag="{Binding}"
                                                Click="DownloadButton_Click">
                                            <PathIcon Data="M480-320 280-520l56-58 104 104v-326h80v326l104-104 56 58-200 200ZM240-160q-33 0-56.5-23.5T160-240v-120h80v120h480v-120h80v120q0 33-23.5 56.5T720-160H240Z" Width="18" Foreground="{DynamicResource WindowBackgroundColor}"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Compose Panel (hidden by default, shown for new chat) -->
                <local:ComposePanel Name="ComposePanel" IsVisible="False" Grid.Row="0" Grid.Column="1"/>

                <!-- Input Area -->
                <Border Grid.Row="2"
                        Name="InputAreaBorder"
                        Background="{DynamicResource WhiteBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0,0,8,0"
                        Padding="20,12"
                        IsVisible="False">
                    <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                        <TextBox Grid.Column="0"
                                 Name="MessageInputBox"
                                 Watermark="Type a message..."
                                 FontSize="14"
                                 MinHeight="40"
                                 MaxHeight="120"
                                 AcceptsReturn="False"
                                 TextWrapping="Wrap"
                                 VerticalContentAlignment="Center"/>
                        <Button Grid.Column="1"
                                Name="SelectFileButton"
                                FontSize="14"
                                MinWidth="30"
                                Margin="10,0,0,0">
                            <PathIcon Data="M440-200h80v-167l64 64 56-57-160-160-160 160 57 56 63-63v167ZM240-80q-33 0-56.5-23.5T160-160v-640q0-33 23.5-56.5T240-880h320l240 240v480q0 33-23.5 56.5T720-80H240Zm280-520v-200H240v640h480v-440H520ZM240-800v200-200 640-640Z" Width="15" Foreground="{DynamicResource WindowBackgroundColor}"></PathIcon>    
                        </Button>
                        <Button Grid.Column="2"
                                Name="PasteFileButton"
                                FontSize="14"
                                MinWidth="30"
                                Margin="10,0,0,0"
                                IsVisible="False"
                                >
                                <PathIcon Data="M200-120q-33 0-56.5-23.5T120-200v-560q0-33 23.5-56.5T200-840h167q11-35 43-57.5t70-22.5q40 0 71.5 22.5T594-840h166q33 0 56.5 23.5T840-760v560q0 33-23.5 56.5T760-120H200Zm0-80h560v-560h-80v120H280v-120h-80v560Zm280-560q17 0 28.5-11.5T520-800q0-17-11.5-28.5T480-840q-17 0-28.5 11.5T440-800q0 17 11.5 28.5T480-760Z" Width="15" Foreground="{DynamicResource WindowBackgroundColor}"></PathIcon>
                        </Button>
                        <TextBlock Grid.Column="3"
                                   Name="SelectedFileTextBlock"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="4"
                                Name="SendButton"
                                FontSize="16"
                                MinWidth="50"
                                Margin="10,0,0,0">
                            <PathIcon Data="M120-160v-640l760 320-760 320Zm80-120 474-200-474-200v140l240 60-240 60v140Zm0 0v-400 400Z" Width="18" Foreground="{DynamicResource WindowBackgroundColor}"></PathIcon>
                        </Button>
                    </Grid>
                </Border>

            </Grid>

        </Grid>
        
    </Border>

</Window>