<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FeChat"
        x:Class="FeChat.MainChatWindow"
        Title="Fe Chat"
        Width="900" Height="600"
        MinWidth="700" MinHeight="500"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual"
        CanResize="True"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent">

    <Window.Styles>
        <Style Selector="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#F0F0F0"/>
        </Style>

        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#E3F2FD"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#106EBE"/>
        </Style>

        <Style Selector="Button.icon">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#505050"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="MinWidth" Value="40"/>
        </Style>

        <Style Selector="Button.icon:pointerover">
            <Setter Property="Background" Value="#F0F0F0"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>
    </Window.Styles>

    <!-- Main Container with Shadow -->
    <Border Background="White"
            CornerRadius="8"
            Margin="10"
            BoxShadow="0 8 32 0 #40000000">
        
        <Grid ColumnDefinitions="320,*" RowDefinitions="Auto,*">

            <!-- Custom Title Bar spanning both columns -->
            <Border Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="0"
                    Background="#0078D4"
                    CornerRadius="8,8,0,0"
                    Height="40"
                    Name="TitleBar">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="Fe Chat"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                    <Button Grid.Column="1"
                            Name="CloseButton"
                            Content="✕"
                            FontSize="16"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="40"
                            Height="40"
                            CornerRadius="0,8,0,0"
                            Padding="0"
                            ToolTip.Tip="Close"
                            Cursor="Hand">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#E81123"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </Grid>
            </Border>

            <!-- Left Panel - Contacts List -->
            <Border Grid.Column="0"
                    Grid.Row="1"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,1,0"
                    CornerRadius="0,0,0,8">
                <Grid RowDefinitions="Auto,*">

                    <!-- Contacts Header -->
                    <Border Grid.Row="0"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1"
                            Padding="15,12">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                       Text="Chats"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#202020"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Name="NewChatButton"
                                    Content="+"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Width="36"
                                    Height="36"
                                    Padding="0"
                                    CornerRadius="18"
                                    ToolTip.Tip="New Chat"/>
                        </Grid>
                    </Border>

                    <!-- Contacts List -->
                    <ListBox Grid.Row="1"
                             Name="ContactsListBox"
                             SelectionMode="Single"
                             Background="White">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="local:Contact">
                                <Border BorderBrush="#E0E0E0"
                                        BorderThickness="0,0,0,1"
                                        Padding="15,12"
                                        Background="Transparent">
                                    <Grid ColumnDefinitions="45,*">
                                        <!-- Avatar Circle -->
                                        <Border Grid.Column="0"
                                                Width="45" Height="45"
                                                CornerRadius="22.5"
                                                Background="#0078D4"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Initial}"
                                                       Foreground="White"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Contact Info -->
                                        <Grid Grid.Column="1"
                                              Margin="12,0,0,0"
                                              RowDefinitions="Auto,Auto">
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding ContactId}"
                                                       FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="#202020"/>
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding LastMessage}"
                                                       FontSize="13"
                                                       Foreground="#707070"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,3,0,0"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </Border>

            <!-- Right Panel - Chat View -->
            <Grid Grid.Column="1" Grid.Row="1" RowDefinitions="Auto,*,Auto">

                <!-- Empty State or Chat Header -->
                <Border Grid.Row="0"
                        Name="ChatHeaderBorder"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1"
                        Padding="20,12"
                        IsVisible="False">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Avatar -->
                        <Border Grid.Column="0"
                                Width="40" Height="40"
                                CornerRadius="20"
                                Background="#0078D4"
                                VerticalAlignment="Center">
                            <TextBlock Name="ChatContactInitialText"
                                       Foreground="White"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Contact Name -->
                        <TextBlock Grid.Column="1"
                                   Name="ChatContactNameText"
                                   FontSize="17"
                                   FontWeight="SemiBold"
                                   Foreground="#202020"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>

                        <!-- Refresh Button -->
                        <Button Grid.Column="2"
                                Name="RefreshButton"
                                Content="↻"
                                Classes="icon"
                                FontSize="18"
                                ToolTip.Tip="Refresh messages"/>
                    </Grid>
                </Border>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            Name="EmptyStatePanel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="15">
                    <TextBlock Text="💬"
                               FontSize="64"
                               HorizontalAlignment="Center"
                               Opacity="0.3"/>
                    <TextBlock Text="Select a chat to start messaging"
                               FontSize="16"
                               Foreground="#909090"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Chat Messages Area -->
                <ScrollViewer Grid.Row="1"
                              Name="MessageScrollViewer"
                              Padding="20"
                              Background="#E5DDD5"
                              IsVisible="False">
                    <ItemsControl Name="MessagesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="local:ChatMessage">
                                <Border Margin="0,5"
                                        HorizontalAlignment="{Binding Alignment}">
                                    <Border Background="{Binding BubbleColor}"
                                            CornerRadius="8"
                                            Padding="12,8"
                                            MaxWidth="400">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Text}"
                                                       TextWrapping="Wrap"
                                                       FontSize="14"
                                                       Foreground="#202020"/>
                                            <TextBlock Text="{Binding Time}"
                                                       FontSize="11"
                                                       Foreground="#707070"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Input Area -->
                <Border Grid.Row="2"
                        Name="InputAreaBorder"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0,0,8,0"
                        Padding="20,12"
                        IsVisible="False">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0"
                                 Name="MessageInputBox"
                                 Watermark="Type a message..."
                                 FontSize="14"
                                 MinHeight="40"
                                 MaxHeight="120"
                                 AcceptsReturn="False"
                                 TextWrapping="Wrap"
                                 VerticalContentAlignment="Center"/>
                        <Button Grid.Column="1"
                                Name="SendButton"
                                Content="Send"
                                FontSize="14"
                                MinWidth="80"
                                Margin="10,0,0,0"/>
                    </Grid>
                </Border>

            </Grid>

        </Grid>
        
    </Border>

</Window>
